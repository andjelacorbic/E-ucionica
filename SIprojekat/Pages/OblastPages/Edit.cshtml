@page
@model SIprojekat.Pages.OblastPages.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Oblast</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Oblast.ID" />
            <div class="form-group">
                <label asp-for="Oblast.NazivOblasti" class="control-label"></label>
                <input asp-for="Oblast.NazivOblasti" class="form-control" />
                <span asp-validation-for="Oblast.NazivOblasti" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Oblast.PredmetID" class="control-label"></label>
                <select asp-for="Oblast.PredmetID" class="form-control" asp-items="ViewBag.PredmetID"></select>
                <span asp-validation-for="Oblast.PredmetID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Oblasti">Nazad</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
